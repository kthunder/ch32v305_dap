{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Download",
            "command": "wlink",
            "args": [
                "flash",
                "./build/${workspaceFolderBasename}.elf"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Build"
            ]
        },
        {
            "type": "shell",
            "label": "Build",
            "command": "cmake --build ./build --target all --",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "hide": true
        }
    ]
}